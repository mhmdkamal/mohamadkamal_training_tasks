<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="sale_report_inherit_template" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='row mt32 mb32']//div[last()]" position="after">
            <div class="row mt32 mb32" id="sale_inherit">
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Discount Amount:</strong>
                    <p class="m-0" t-field="doc.discount_amount"/>
                </div>
            </div>
        </xpath>
        <xpath expr="//div[@class='clearfix']//div[last()]" position="after">
            <div id="total" class="row" name="total">
                <div class="col-auto col-3 mw-100 mb-2">
                    <strong>Total Discount Amount:</strong>
                    <p class="m-0" t-field="doc.total_amount_after_discount"/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>